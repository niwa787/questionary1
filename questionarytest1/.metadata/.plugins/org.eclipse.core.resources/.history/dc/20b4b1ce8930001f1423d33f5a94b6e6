<script>
    function showSuccessMessage(event) {
        event.preventDefault(); // 阻止表單提交
        document.getElementById('successMessage').style.display = 'block'; // 顯示成功消息
        setTimeout(function() {
            window.location.href = '/products/index'; // 跳轉到 products/index
        }, 2000); // 2秒後跳轉
    }
</script>
