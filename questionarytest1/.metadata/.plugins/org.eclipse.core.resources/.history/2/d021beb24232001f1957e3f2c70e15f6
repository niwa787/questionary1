        <h2 th:text="${product.name}"></h2>
		<div class = top>
        <ul id="answerList">
            <li th:each="answer : ${answers}" th:text="${answer.answer}"></li>
        </ul>
		<table class="stats-table">
		            <thead>
		                <tr>
		                    <th>選項</th>
		                    <th>百分比</th>
		                </tr>
		            </thead>
